<div class="overlay"></div>
<div style="display: flex">
    <div>
        <div class="side">
          <div style=" width: 100%; height: 100vh; ">
            <ul>
              <a href=<%= "/cell/dashboard?cell="+ cell %>><li>Mark Attendance</li></a>
              <a href="/cell/addmembers"><li>Add Member</li></a></a>
              <a href=<%= "/cell/members?cell="+ cell %>><li>Members</li></a> 
            </ul>
          </div>
        </div>
      </div>




  <div class="meeting-output" style="width: 100%; height: 500px;">
    <div style="display: flex; font-size: 1.4em; padding: 10px; background: rgba(0, 0, 0, 0.404); color: white">
      <div class="bar" style="font-size: 40px;">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
      </div>
      <h2>Add new members</h2>
    </div>

    <h1 class="message"><%= message %></h1>


      <div class="align-top p-5 w-full mx-auto md:w-1/3" style="margin-top: 100px;">
        <form method="POST" action="/cell/addmembers" >
        
          
         <div class="relative mb-4 lg:h-2/3">
            <label for="name" class="block mb-2 text-sm font-medium dark:text-gray-400">Full Name</label>
            <input type="text" id="name" name="name" class="my-5 w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
        </div>
        

          <div class="relative mb-4 lg:h-2/3">
              <label for="email" class="block mb-2 text-sm font-medium dark:text-gray-400">Email</label>
              <input type="email" name="email" class="my-5 w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
          </div>

          <div class="relative mb-4 lg:h-2/3">
            <label for="number" class="block mb-2 text-sm font-medium dark:text-gray-400">Phone number</label>
            <input type="number" id="number" name="number" class="my-5 w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
        </div>
        
        <div class="relative mb-4 lg:h-2/3">
          <label for="address" class="block mb-2 text-sm font-medium dark:text-gray-400">Address</label>
          <input type="text" id="address" name="address" class="my-5 w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
      </div>
        <label for="cell" class="block mb-2 text-sm font-medium dark:text-gray-400">Cell</label>
        <select style="margin-bottom: 10px" name="cell"  class="p-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full dark:border-gray-600 dark:placeholder-gray-400  dark:focus:ring-blue-500 dark:focus:border-blue-500">
          <option name="cell" value=<%= cell %>><%= cell %></option>
        </select>
        <!-- <label for="role" class="block mb-2 text-sm font-medium dark:text-gray-400">Cell</label>
        <select required style="margin-bottom: 10px" name="cell" id="service" class="p-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full dark:border-gray-600 dark:placeholder-gray-400  dark:focus:ring-blue-500 dark:focus:border-blue-500">
          <option name="cell" value="">Choose a cell</option>
          <option name="cell" value="Light Cell">Light Cell</option>
          <option name="cell" value="Dunamis Cell">Dunamis Cell</option>
          <option name="cell" value="Global Epignosis">Global Epignosis</option>
        </select> -->

          <label for="role" class="block mb-2 text-sm font-medium dark:text-gray-400">Role</label>
          <select style="margin-bottom: 10px" name="role" id="service" class="p-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full dark:border-gray-600 dark:placeholder-gray-400  dark:focus:ring-blue-500 dark:focus:border-blue-500">
            <option name="role" value="Senior Cell Leader">Senior Cell Leader</option>
            <option name="role" value="Cell Leader">Cell Leader</option>
            <option name="role" value="B/s Class Teacher">B/s Class Teacher</option>
            <option name="role" value="Member">Member</option>
          </select>

  
      
          <button type="submit" class="mt-5 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Add Member</button>
        </form>
    </div>
  </div>
</div>


 
 