<%-include("./partials/header")-%>

<%-include("./partials/nav")-%>


<div style="display: flex">
  <div>
    <%-include("./partials/sidenav")-%>
  </div>

  <div style="display: flex; flex-direction: column; width: 100%">
  <div class="mt-5" style="width: 100%; height: auto; padding: 20px 0px">
     <form action="/attendancelist" style="width: 500px; margin: 0px auto">
      <div>
        <div class="relative mb-4">
            <label for="date" class="leading-7 text-sm text-gray-600">Select Meeting Date to view Attendance</label>
            <input type="date" type="hidden" id="date" name="date" class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
            <input style="background-color: aqua;" type="submit"  value="Search Meeting" class=" mt-3 w-full bg-green-400 rounded border border-gray-300 text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
          </div>
      </div>
      
     </form>
  </div>

  <% if(userAttendance.length < 1){ %>
   <h1 class="font-mono mt-10 text-3xl font-bold text-red-500" style="text-align: center; ">Select a meeting date to view Attendance</h1>
   <% }else{ %>
  <div class="meeting-output" style="width: 100%; height: 500px; box-shadow: .5px .4px 10px black;">
        
       <section class="text-gray-600 body-font">
         <div class="container px-5 py-24 mx-auto">
           <div class="lg:w-2/3 w-full mx-auto overflow-auto">
             <table class="table-auto w-full text-left whitespace-no-wrap">
               <thead style="text-align: center">
                 <tr>
                   <th style="border-right: 2px solid" class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-sm bg-gray-100 rounded-tl rounded-bl">Name</th>
                   <th class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-sm bg-gray-100">Cell</th>
                   <th class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-sm bg-gray-100">Position</th>
                   <th class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-sm bg-gray-100">Attendance</th>

                 </tr>
               </thead>
               <tbody style="text-align: center">
                <% userAttendance.forEach(ele =>{ %>
                  <tr>
                   <td style="border-right: 2px solid;" class="px-4 py-3"><%= ele.name %></td>
                   <td class="px-4 py-3"><%= ele.cell %></td>
                   <td class="px-4 py-3"><%= ele.position %></td>
                   <td class="px-4 py-3 text-lg text-gray-900"><%= ele.service[0].present ? '/' : 'X' %></td>
                 </tr>
                <% }) %>

               </tbody>
             </table>
           </div>

         </div>
       </section>
        
  </div>
  <% } %>
  </div>

</div>